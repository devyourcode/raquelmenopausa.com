<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Esqueci Senha | @ViewBag.TitlePage</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="@Href("~/Content/admin/css/bootstrap.min.css")">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="@Href("~/Content/admin/css/style.min.css")">
    <link rel="stylesheet" href="@Href("~/Content/admin/css/blue.css")">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a><b style="color: #fff">@ViewBag.TitlePage</b></a>
            <br />
        </div>
        <div class="login-box-body">
            <center>
                <img src="@Href("~/Content/admin/img/logo-yourcode.png")" style="margin-bottom:20px; text-align:center" /><br />
            </center>
            <p class="login-box-msg">Preencha os dados abaixo para recuperar sua senha</p>
            @if (ViewData["mensagem"] != null && ViewData["mensagem"] != "")
            {
                <div class="alert alert-danger">
                    <a class="close" data-dismiss="alert" href="#">&times;</a>
                    @Html.Raw(ViewData["mensagem"])
                </div>
            }
            @using (Html.BeginForm("Index", "EsqueciSenha", FormMethod.Post, new { @class = "bootstrap-admin-login-form" }))
            {
                <div class="form-group has-feedback">
                    @Html.TextBox("Login", ViewData["txtLogin"], new { @class = "form-control", @type = "text", @placeholder = "Usuário ou  E-mail", @required = "required", @autocomplete = "off", @autofocus = "on" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <a href="@Href("~/home")" class="btn btn-default btn-block btn-flat">Voltar</a>
                    </div>
                    <div class="col-xs-6">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Recuperar</button>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="@Href("~/Content/js/jQuery-2.1.4.min.js")"></script>
    <script src="@Href("~/Content/js/bootstrap.min.js")"></script>
    <script src="@Href("~/Content/js/icheck.min.js")"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>

    <script type="text/javascript">
        function capLock(e) {
            kc = e.keyCode ? e.keyCode : e.which;
            sk = e.shiftKey ? e.shiftKey : ((kc == 16) ? true : false);
            if (((kc >= 65 && kc <= 90) && !sk) || ((kc >= 97 && kc <= 122) && sk))
                document.getElementById('divMayus').style.visibility = 'visible';
            else
                document.getElementById('divMayus').style.visibility = 'hidden';
        }
    </script>
</body>
</html>
