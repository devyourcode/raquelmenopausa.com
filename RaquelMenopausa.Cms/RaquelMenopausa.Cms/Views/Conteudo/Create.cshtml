<form id="formCreateConteudo">
    <div class="row">
        <div class="col-md-6 col-xs-12">
            <div class="form-group custom-input">
                <label for="Assunto">Assunto</label>
                <div class="input-wrapper">
                    <input type="text" id="Assunto" name="Assunto" class="search-input" placeholder="insira o assunto do conteúdo" />
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xs-12">
            <label class="label-title">Imagem de capa</label>
            <div class="custom-file-upload">
                <label for="arquivo" class="upload-label">
                    <img src="~/img/imgsite/mdi_attach-file.png" style="margin-top:4px" class="icon-nav" alt="Mais" />
                    <span class="text-bold">Adicionar imagem</span>
                </label>
                <span class="divider">|</span>
                <span id="file-name" class="file-name">Nenhum arquivo adicionado</span>
                <input type="file" id="arquivo" name="arquivo" accept="image/*" />
            </div>
        </div>

        <div class="col-md-6 col-xs-12">
            <div class="form-group custom-input">
                <label for="Titulo">Título</label>
                <div class="input-wrapper">
                    <input type="text" id="Titulo" name="Titulo" class="search-input" placeholder="insira o título do conteúdo"/>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xs-12">
            <label class="label-title">Áudio ou Vídeo</label>
            <div class="custom-file-upload">
                <label for="arquivoMidia" class="upload-label">
                    <span class="text-bold">Adicionar arquivo</span>
                </label>
                <span class="divider">|</span>
                <span id="file-name-midia" class="file-name">Nenhum arquivo adicionado</span>
                <input type="file" id="arquivoMidia" name="arquivoMidia" accept="audio/*,video/*" />
            </div>
        </div>
        
        <div class="col-md-6 col-xs-12">
            <div class="form-group custom-input">
                <label for="Introducao">Introdução</label>
                <div class="input-wrapper">
                    <input type="text" id="Introducao" name="Introducao" class="search-input" placeholder="insira a introdução do conteúdo" />
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xs-12">
            <div class="form-group custom-input">
                <label for="Texto">Texto Principal</label>
                <div class="input-wrapper">
                    <input type="text" id="Texto" name="Texto" class="search-input" placeholder="insira a texto do conteúdo" />
                </div>
            </div>
        </div>

    </div>
    <div class="buttons-container">
        <button type="button" class="btn-cancelar">CANCELAR</button>
        <button type="submit" class="btn-save">SALVAR ALTERAÇÕES</button>
    </div>


</form>
